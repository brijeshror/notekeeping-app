<div class="row devise">
  <div class="col s12 m8 l6 offset-m2 offset-l3">
    <div class="card hoverable">
      <div class="card-content">
        <span class="card-title center-align"><h4>Edit Account</h4></span>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= form_error_messages(f.object) %>

            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="field">
              <%= f.label :name %><br />
              <%= f.text_field :name %>
            </div>

            <div class="field">
              <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
              <%= f.password_field :password, autocomplete: "off" %>
              <% if @minimum_password_length %>
                  <br />
                  <em><%= @minimum_password_length %> characters minimum</em>
              <% end %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off" %>
            </div>

            <div class="field">
              <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
              <%= f.password_field :current_password, autocomplete: "off" %>
            </div>

            <div class="actions">
              <%= f.submit "Update", class: "btn waves-effect waves-light" %>
            </div>
        <% end %>
      </div>

      <!--# NOTE : Removed feature -->
      <!--<div class="card-action">-->
        <%#= link_to "Cancel my account", registration_path(resource_name, authenticity_token: form_authenticity_token),
           data: { confirm: "Your account may deleted permanently. Are you sure?" }, method: :delete, remote: true, class: "btn waves-effect waves-light" %>
      <!--</div>-->
    </div>
  </div>
</div>
